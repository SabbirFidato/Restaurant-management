<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	
	<h2>UPDATE PRICE</h2>
	<a href="/admin">Back </a>
	<br/><br/>
	<form method="post">
		<input type="hidden" name="itemId" value="<%= itemDetails.itemid %>">
		<table>
			<tr>
				<td>ITEM NAME</td>
				<td><input type="text" name="iname" value="<%= itemDetails.itemname %>"></td>
			</tr>

			<tr>
				<td>Price</td>
				<td><input type="text" name="price" value="<%= itemDetails.price %>">TK</td>
			</tr>

			<tr>
				<td></td>
				<td><input type="submit" value="Save"></td>
			</tr>
		</table>
		<ul>
			<% for(var i = 0; i < errs.length; i++){ %>
				<li><%= errs[i].message %></li>
			<% } %>
		</ul>
	</form>
</body>
</html>




			